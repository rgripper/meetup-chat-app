{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",


    "strict": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,

    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}